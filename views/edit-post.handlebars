<section class="d-flex flex-row justify-content-between">
  <div class="col-md-10">
    <div class="card">
      <h3 class="card-header">Edit Post</h3>
      <form id="edit-post-form" class="card-body">
        <label for="title" class="form-label">Title</label>
        <textarea required
          id="title"
          name="text"
          oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"'
          autofocus="true"
          class="form-input p-1 pl-3"
        >{{post.title}}</textarea>
        <label for="content" class="form-label">Content</label>
        <textarea required
          id="content"
          name="text"
          oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"'
          autofocus="true"
          class="form-input p-1 pl-3"
        >{{post.content}}
        </textarea>
        <button id="edit-btn" type="submit" class="btn">Update Post</button>
        <button id="delete-btn" type="submit" class="btn">Delete</button>
      </form>
    </div>
  </div>
</section>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>