{{> post-info post}}

{{> comments post.comments }}

{{#if loggedIn}}
<section class="d-flex flex-row justify-content-between">
  <div class="col-md-10">
    <div class="card">
      <h3 class="card-header"></h3>
      <form id="new-post-form" class="card-body">
        <label for="comment" class="form-label">Comment</label>
        <textarea required
          id="comment"
          name="comment"
          oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"'
          autofocus="true"
          class="form-input p-1 pl-3"
        ></textarea>
        <button id="comment-btn" type="submit" class="btn">Submit</button>
      </form>
    </div>
  </div>
</section>
{{/if}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}