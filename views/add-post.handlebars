<section class="d-flex flex-row justify-content-between">
  <div class="col-md-10">
    <div class="card">
      <h3 class="card-header">Create New Post</h3>
      <form id="new-post-form" class="card-body">
        <label for="title" class="form-label">Title</label>
        <textarea
          required
          id="title"
          name="text"
          oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"'
          autofocus="true"
          class="form-input p-1 pl-3"
        ></textarea>
        <label for="content" class="form-label">Content</label>
        <textarea
          required
          id="content"
          name="text"
          oninput='this.style.height = "";this.style.height = this.scrollHeight + "px"'
          autofocus="true"
          class="form-input p-1 pl-3"
        ></textarea>
        <button id="create-btn" type="submit" class="btn">Create</button>
      </form>
    </div>
  </div>
</section>

<script src="/javascript/add-post.js"></script>